{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["playwright"],
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules", ".next", "dist"]
}
